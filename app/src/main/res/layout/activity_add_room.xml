<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRoom.AddRoomActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/purple_2">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="16dp"
            android:layout_height="32dp"
            android:layout_marginStart="32dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Add Room"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="end"
            android:paddingEnd="16dp"
            android:text="SAVE"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:paddingTop="32dp"
        android:paddingHorizontal="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Room's name"
            android:textSize="16sp" />

        <EditText android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/box2"
            android:textSize="18sp"
            android:hint="Room's name"
            android:padding="14dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Room's"
            android:textSize="16sp"
            android:layout_marginTop="18dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

        <TableLayout
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:showDividers="middle"
            android:divider="@drawable/divider"
            android:weightSum="3">

            <TableRow android:layout_width="match_parent"
                android:weightSum="3"
                android:divider="@drawable/divider"
                android:showDividers="middle"
                android:layout_weight="1">
                <ImageButton android:id="@+id/kitchen"
                    android:layout_weight="1"
                    android:background="@drawable/circle1"
                    android:src="@drawable/kitchen"
                    android:backgroundTint="@color/purple_1"
                    android:scaleType="fitXY"
                    android:padding="32dp"/>
                <ImageButton android:id="@+id/bedroom"
                    android:layout_weight="1"
                    android:background="@drawable/circle1"
                    android:src="@drawable/bedroom"
                    app:tint="#909090"
                    android:backgroundTint="#f0f0f0"
                    android:scaleType="fitXY"
                    android:padding="32dp"/>
                <ImageButton android:id="@+id/bathroom"
                    android:layout_weight="1"
                    android:background="@drawable/circle1"
                    android:src="@drawable/bathroom"
                    app:tint="#909090"
                    android:backgroundTint="#f0f0f0"
                    android:scaleType="fitXY"
                    android:padding="32dp"/>
            </TableRow>
            <TableRow android:layout_width="match_parent"
                android:weightSum="3"
                android:divider="@drawable/divider"
                android:showDividers="middle"
                android:layout_weight="1">
                <ImageButton android:id="@+id/office"
                    android:layout_weight="1"
                    android:background="@drawable/circle1"
                    android:src="@drawable/office"
                    app:tint="#909090"
                    android:backgroundTint="#f0f0f0"
                    android:scaleType="fitXY"
                    android:padding="32dp"/>
                <ImageButton android:id="@+id/tvroom"
                    android:layout_weight="1"
                    android:background="@drawable/circle1"
                    android:src="@drawable/tvroom"
                    app:tint="#909090"
                    android:backgroundTint="#f0f0f0"
                    android:scaleType="fitXY"
                    android:padding="32dp"/>
                <ImageButton android:id="@+id/livingroom"
                    android:layout_weight="1"
                    android:background="@drawable/circle1"
                    android:src="@drawable/livingroom"
                    app:tint="#909090"
                    android:backgroundTint="#f0f0f0"
                    android:scaleType="fitXY"
                    android:padding="32dp"/>
            </TableRow>
            <TableRow android:layout_width="match_parent"
                android:weightSum="3"
                android:divider="@drawable/divider"
                android:showDividers="middle"
                android:layout_weight="1">
                <ImageButton android:id="@+id/garage"
                    android:layout_weight="1"
                    android:background="@drawable/circle1"
                    android:src="@drawable/garage"
                    app:tint="#909090"
                    android:backgroundTint="#f0f0f0"
                    android:scaleType="fitXY"
                    android:padding="32dp"/>
                <ImageButton android:id="@+id/toilet"
                    android:layout_weight="1"
                    android:background="@drawable/circle1"
                    android:src="@drawable/toilet"
                    app:tint="#909090"
                    android:backgroundTint="#f0f0f0"
                    android:scaleType="fitXY"
                    android:padding="32dp"/>
                <ImageButton android:id="@+id/kidroom"
                    android:layout_weight="1"
                    android:background="@drawable/circle1"
                    android:src="@drawable/kidroom"
                    app:tint="#909090"
                    android:backgroundTint="#f0f0f0"
                    android:scaleType="fitXY"
                    android:padding="32dp"/>
            </TableRow>

        </TableLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>